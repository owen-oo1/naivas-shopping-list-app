<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Shopping list credentials</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/shopping-list/create" method="POST">
            <div class="form-group">
              <label for="title">Shopping list title</label>
              <input type="title" class="form-control" name="title">
            </div>
            <div class="form-group">
              <label for="branch">Branch</label>
              <input type="branch" class="form-control" name="branch">
            </div>
            <!-- In your EJS or HTML form -->
            <button type="submit" class="btn btn-dark" name="action" value="create">Create</button>
            <button type="submit" class="btn btn-dark" name="action" value="skip">Skip</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/header') %>    